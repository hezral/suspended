<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema path="/com/github/hezral/suspended/" id="com.github.hezral.suspended">
        <key name="pos-x" type="i">
            <default>360</default>
            <summary>Horizontal position</summary>
            <description>Saved horizontal position of main window</description>
        </key>
        <key name="pos-y" type="i">
            <default>640</default>
            <summary>Vertical position</summary>
            <description>Saved vertical position of main window</description>
        </key>
        <key name="window-width" type="i">
            <default>480</default>
            <summary>Window width</summary>
            <description>Saved width of main window</description>
        </key>
        <key name="window-height" type="i">
            <default>480</default>
            <summary>Window height</summary>
            <description>Saved height of main window</description>
        </key>
        <key type="b" name="theme-optin">
            <default>false</default>
            <summary>Follow OS Appearance Style</summary>
            <description>Follow OS Appearance Style</description>
        </key>
            <key type="b" name="prefer-dark-style">
            <default>false</default>
            <summary>If the dark Gtk stylesheet should be used</summary>
            <description>If the dark Gtk stylesheet should be used</description>
        </key>
        <key type="b" name="first-run">
            <default>true</default>
            <summary>Whether this is the first time app has opened</summary>
            <description>Used to determine whether or not to perform initial install steps</description>
        </key>
        <key type="b" name="hide-on-startup">
            <default>false</default>
            <summary>Hides app window on startup</summary>
            <description>Hides app window on startup</description>
        </key>
        <key type="as" name="excluded-apps">
            <default>['Plank','Wingpanel','Suspended']</default>
            <summary>Excluded apps from being managed</summary>
            <description>Excluded apps from being managed</description>
        </key>
    </schema>
</schemalist>